@model ICollection<AtractionUpdateDTO>;

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Atraction</h1>

    <a asp-action="Create" asp-controller="Atraction" asp-area="Admin">
        <button class="btn btn-success mb-3">
            Create
        </button>
    </a>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Description</th>
                            
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (AtractionUpdateDTO item in Model)
                        {
                            <tr>
                                <td>
                                    <img width="50" src="~/uploads/news/@item.Img" alt="Alternate Text" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.Category.Title</td>
                                <td>
                                     <a asp-controller="Atraction" asp-action="Update" asp-area="Admin" asp-route-id="@item.Id"> 
                                        <button class="btn btn-warning"> 
                                             Update 
                                        </button> 
                                     </a> 
                                </td>
                                <td>
                                    <a asp-controller="Atraction" asp-action="Delete" asp-area="Admin" asp-route-id="@item.Id"> 
                                        <button class="btn btn-danger"> 
                                            Delete 
                                        </button>
                                    </a>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->